{
  "name": "sarthi",
  "version": "1.0.0",
  "description": "Full-stack web app with React frontend, Node/Express backend, and SQLite database",
  "main": "server/index.js",
  "scripts": {
    "install": "npm install @libsql/linux-x64-gnu --save-optional && npm install",
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-deps": "npm install && cd client && npm install",
    "setup-db": "node server/scripts/setupDatabase.js",
    "setup-turso": "node server/scripts/setupTurso.js",
    "migrate-turso": "node server/scripts/migrateTurso.js",
    "ingest-gita": "node server/scripts/data-ingest.js"
  },
  "keywords": [
    "react",
    "express",
    "node",
    "sqlite",
    "full-stack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "@libsql/client": "^0.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "cheerio": "^1.0.0-rc.12"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
